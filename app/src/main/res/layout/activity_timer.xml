<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">
    <ImageView
        android:id="@+id/ib_voltar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:srcCompat="@drawable/ic_voltar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nome Do Projeto"
        android:fontFamily="@font/rubikmedium"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pause_cronometro"
        android:layout_width="67dp"
        android:layout_height="78dp"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="196dp"
        android:padding="3dp"
        android:src="@drawable/ic_pause_cronometro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/parar_cronometro"
        android:layout_width="67dp"
        android:layout_height="78dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="196dp"
        android:padding="3dp"
        android:src="@drawable/ic_stop_cronometro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="298dp"
        android:layout_height="228dp"
        android:layout_marginTop="128dp"
        android:theme="@style/Theme.ProgressBar"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>